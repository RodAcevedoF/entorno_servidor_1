<h2>My Profile</h2>

<div class="profile-card">
  <h3>Personal Information</h3>
  <dl>
    <dt>Name</dt>
    <dd><%= user.name %></dd>

    <dt>Email</dt>
    <dd><%= user.email %></dd>

    <dt>Age</dt>
    <dd><%= user.age %> years</dd>

    <dt>City</dt>
    <dd><%= user.city || 'Not specified' %></dd>

    <dt>Interests</dt>
    <dd>
      <%= (user.interests && user.interests.length > 0)
        ? user.interests.join(', ')
        : 'None selected' %>
    </dd>

    <dt>Member since</dt>
    <dd><%= formatDate(user.createdAt) %></dd>
  </dl>
</div>

<div class="profile-actions">
  <a href="/profile/edit" class="button">Edit Profile</a>
  <a href="/bookings/history" class="button">My Bookings</a>
  <a href="/sessions" class="button">View Sessions</a>
  <a href="/cart" class="button">My Cart</a>
  <form action="/logout" method="POST" style="display: inline">
    <button type="submit" class="button button-danger">Logout</button>
  </form>
</div>
