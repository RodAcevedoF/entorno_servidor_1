<h2>Create Account</h2>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
<div class="errors">
	<ul>
		<% errors.forEach(function(err) { %>
		<li><%= err %></li>
		<% }); %>
	</ul>
</div>
<% } %>

<form action="/register" method="POST" class="form-register">
	<div class="field">
		<label for="name">Name *</label>
		<input
			type="text"
			id="name"
			name="name"
			value="<%= data.name || '' %>"
			required />
	</div>

	<div class="field">
		<label for="email">Email *</label>
		<input
			type="email"
			id="email"
			name="email"
			value="<%= data.email || '' %>"
			required />
	</div>

	<div class="field">
		<label for="password">Password *</label>
		<input
			type="password"
			id="password"
			name="password"
			required
			minlength="4" />
	</div>

	<div class="field">
		<label for="age">Age *</label>
		<input
			type="number"
			id="age"
			name="age"
			value="<%= data.age || '' %>"
			min="1"
			required />
	</div>

	<div class="field">
		<label for="city">City</label>
		<input
			type="text"
			id="city"
			name="city"
			value="<%= data.city || '' %>" />
	</div>

	<div class="field">
		<label>Interests</label>
		<div class="checkboxes">
			<label
				><input type="checkbox" name="interests" value="meditation" />
				Meditation</label
			>
			<label
				><input type="checkbox" name="interests" value="energy_healing" /> Energy
				Healing</label
			>
			<label
				><input type="checkbox" name="interests" value="chakras" />
				Chakras</label
			>
			<label
				><input type="checkbox" name="interests" value="astral_journey" /> Astral
				Journey</label
			>
			<label
				><input type="checkbox" name="interests" value="regression_therapy" />
				Regression Therapy</label
			>
		</div>
	</div>

	<button type="submit">Register</button>
</form>

<p class="link-alt">Already have an account? <a href="/login">Sign in</a></p>
