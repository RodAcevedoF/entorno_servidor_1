<h2>Create Account</h2>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
<div class="errors">
	<ul>
		<% errors.forEach(function(err) { %>
		<li><%= err %></li>
		<% }); %>
	</ul>
</div>
<% } %>

<form action="/register" method="POST" class="form-registro">
	<div class="field">
		<label for="nombre">Name *</label>
		<input
			type="text"
			id="nombre"
			name="nombre"
			value="<%= data.name || '' %>"
			required />
	</div>

	<div class="field">
		<label for="email">Email *</label>
		<input
			type="email"
			id="email"
			name="email"
			value="<%= data.email || '' %>"
			required />
	</div>

	<div class="field">
		<label for="password">Password *</label>
		<input
			type="password"
			id="password"
			name="password"
			required
			minlength="4" />
	</div>

	<div class="field">
		<label for="edad">Age *</label>
		<input
			type="number"
			id="edad"
			name="edad"
			value="<%= data.age || '' %>"
			min="1"
			required />
	</div>

	<div class="field">
		<label for="ciudad">City</label>
		<input
			type="text"
			id="ciudad"
			name="ciudad"
			value="<%= data.city || '' %>" />
	</div>

	<div class="field">
		<label>Interests</label>
		<div class="checkboxes">
			<label
				><input type="checkbox" name="intereses" value="meditacion" />
				Meditation</label
			>
			<label
				><input type="checkbox" name="intereses" value="sanacion" /> Energy
				Healing</label
			>
			<label
				><input type="checkbox" name="intereses" value="chakras" />
				Chakras</label
			>
			<label
				><input type="checkbox" name="intereses" value="viaje_astral" /> Astral
				Journey</label
			>
			<label
				><input type="checkbox" name="intereses" value="regresiones" />
				Regression Therapy</label
			>
		</div>
	</div>

	<button type="submit">Register</button>
</form>

<p class="link-alt">Already have an account? <a href="/login">Sign in</a></p>
