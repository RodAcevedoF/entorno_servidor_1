<h2>My Bookings</h2>

<% if (bookings.length === 0) { %>
<div class="empty-cart">
	<p>You have no bookings yet.</p>
	<a href="/sessions" class="button">Explore Sessions</a>
</div>
<% } else { %>
<div class="reservations-list">
	<% bookings.forEach(function(booking) { %>
	<div class="reservation-card">
		<div class="reservation-header">
			<span class="reservation-date"><%= new Date(booking.createdAt).toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></span>
			<span class="reservation-total"><%= booking.total %>â‚¬</span>
		</div>
		<ul class="reservation-items">
			<% booking.items.forEach(function(item) { %>
			<li>
				<strong><%= item.session.title %></strong>
				<span><%= new Date(item.session.date).toLocaleDateString('en-US') %> - <%= item.session.time %></span>
				<span>x<%= item.quantity %></span>
			</li>
			<% }); %>
		</ul>
	</div>
	<% }); %>
</div>
<% } %>

<div class="profile-actions">
	<a href="/profile" class="button">Back to Profile</a>
	<a href="/sessions" class="button">Explore Sessions</a>
</div>
